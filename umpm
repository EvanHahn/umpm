#! /usr/bin/env python2

import sys
from glob import iglob

def unknown(argv):
    print 'Unknown command.'

def help(argv):
    print 'Usage:'
    print
    print '    umpm install package_name'
    print '    umpm search search'

def install(argv):

    if len(argv) < 1:
        print 'What package do you want to install?'
        return

    package = argv[0]

if __name__ == '__main__':

    argv = sys.argv
    argc = len(argv)

    command = 'help'
    argv_rest = argv[2:]
    if argc > 1:
        command = argv[1]

    {
        'help': help,
        'install': install
    }.get(command, unknown)(argv_rest)
